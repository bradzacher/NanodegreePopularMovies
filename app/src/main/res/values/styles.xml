<resources>
    <color name="primary_light">#3B7F5E</color>
    <color name="primary">#56BA89</color>
    <color name="primary_dark">#3B7F5E</color>
    <color name="accent_light">#EEF8FC</color>
    <color name="accent">#CFD8DC</color>
    <color name="accent_dark">#787D7F</color>
    <color name="alert_bad">#D50000</color>
    <color name="alert_good">#64DD17</color>
    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="MovieDetails_Tagline_Text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="MovieDetails_FavouritesBar_Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="MovieDetails_Summary_Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="ReviewAuthor" parent="@style/CardTitle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TrailerTitle" parent="@style/CardTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
</resources>
