<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:recyclerview="http://schemas.android.com/apk/re/android.support.v7.recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="au.com.zacher.popularmovies.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        recyclerview:layoutManager="android.support.v7.widget.GridLayoutManager"
        recyclerview:spanCount="2" />

</RelativeLayout>
